<%= bootstrap_form_with(model: friend) do |form| %>

<% if friend.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>
    <ul>
      <% friend.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<div class="container">
  
  <div class="field form-group">
    <%= form.text_field :first_name ,class:"form-control",placeholder:"first name"%>
  </div>

  <div class="field form-group">
    <%= form.text_field :last_name ,class:"form-control",placeholder:"last name"%>
  </div>

  <div class="field form-group">
    <%= form.text_field :email ,class:"form-control",placeholder:"Email Id"%>
  </div>

  <div class="field form-group">
    <%= form.text_field :phone ,class:"form-control",placeholder:"Phone Number"%>
  </div>

  <div class="field form-group">
    <%= form.text_field :twitter ,class:"form-control" ,placeholder:"Twitter"%>
  </div>

  <div class="field form-group">
    <%= form.text_field :instagram ,class:"form-control",placeholder:"Instagram"%>
  </div>


  <div class="field form-group">
    <%= form.file_field :profile_image, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.hidden_field :user_id ,class:"form-control",value:current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-success' %>
  </div>
</div>
<% end %>
